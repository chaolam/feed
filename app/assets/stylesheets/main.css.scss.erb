/* using css rather than js to position the box in the center of the window */
.generic_dialog_popup {
  position:fixed;
  top:300px;
  left:48%;
  margin-left:-334px; 
  margin-top:-100px;
  width:668px;
  z-index:10000;
  border-color: #999;
  background:rgba(82,82,82,0.6);
  outline: 0;
  @include boxshadow(0, 0px, 10px, #999);
  border: 5px solid #333;
  @include rounded(8px);
  } 

  * html .generic_dialog_popup
   {
     position: absolute; 
     margin-top:120px;
     top:expression(eval(document.compatMode &&
     document.compatMode=='CSS1Compat') ?
     documentElement.scrollTop+((documentElement.clientHeight-this.clientHeight)/2 - 155)
     : document.body.scrollTop
     +((document.body.clientHeight-this.clientHeight)/2 -155));
   }  

