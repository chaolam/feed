  -webkit-transition: visibility 0s 1s, opacity 1s linear;
  -moz-transition: visibility 0s 1s, opacity 1s linear;
  -o-transition: visibility 0s 1s, opacity 1s linear;
  transition: visibility 0s 1s, opacity 1s linear;
}
